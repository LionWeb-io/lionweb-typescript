{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "library-serialization",
  "title": "Serialization format specific to library",
  "$ref": "#/$defs/SerializedModel",
  "$defs": {
    "SerializedModel": {
      "type": "object",
      "properties": {
        "serializationFormatVersion": {
          "const": "1"
        },
        "languages": {
          "const": []
        },
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/SerializedNode"
          }
        }
      },
      "required": [
        "serializationFormatVersion",
        "languages",
        "nodes"
      ],
      "additionalProperties": false
    },
    "Id": {
      "type": "string",
      "minLength": 1
    },
    "Ids": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Id"
      },
      "minItems": 1
    },
    "MetaPointer": {
      "type": "object",
      "properties": {
        "language": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "key": {
          "type": "string"
        }
      },
      "required": [
        "language",
        "version",
        "key"
      ],
      "additionalProperties": false
    },
    "Book": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/Id"
        },
        "concept": {
          "const": {
            "metamodel": "LIonCore_M3",
            "version": "1",
            "key": "Book"
          }
        },
        "properties": {
          "type": "array",
          "items": {},
          "properties": {
            "title": {
              "type": "string"
            },
            "pages": {
              "type": "string"
            }
          },
          "required": [
            "title",
            "pages"
          ],
          "additionalProperties": false
        },
        "children": {
          "type": "array",
          "items": {},
          "properties": {},
          "additionalProperties": false
        },
        "references": {
          "type": "array",
          "items": {},
          "properties": {
            "author": {
              "$ref": "#/$defs/Ids"
            }
          },
          "additionalProperties": false
        },
        "parent": {
          "$ref": "#/$defs/Id"
        }
      },
      "required": [
        "id",
        "concept",
        "properties",
        "children",
        "references"
      ],
      "additionalProperties": false
    },
    "Library": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/Id"
        },
        "concept": {
          "const": {
            "metamodel": "LIonCore_M3",
            "version": "1",
            "key": "Library"
          }
        },
        "properties": {
          "type": "array",
          "items": {},
          "properties": {
            "library_Library_name": {
              "type": "string"
            }
          },
          "required": [
            "library_Library_name"
          ],
          "additionalProperties": false
        },
        "children": {
          "type": "array",
          "items": {},
          "properties": {
            "books": {
              "$ref": "#/$defs/Ids"
            }
          },
          "required": [
            "books"
          ],
          "additionalProperties": false
        },
        "references": {
          "type": "array",
          "items": {},
          "properties": {},
          "additionalProperties": false
        },
        "parent": {
          "$ref": "#/$defs/Id"
        }
      },
      "required": [
        "id",
        "concept",
        "properties",
        "children",
        "references"
      ],
      "additionalProperties": false
    },
    "Writer": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/Id"
        },
        "concept": {
          "const": {
            "metamodel": "LIonCore_M3",
            "version": "1",
            "key": "Writer"
          }
        },
        "properties": {
          "type": "array",
          "items": {},
          "properties": {
            "library_Writer_name": {
              "type": "string"
            }
          },
          "required": [
            "library_Writer_name"
          ],
          "additionalProperties": false
        },
        "children": {
          "type": "array",
          "items": {},
          "properties": {},
          "additionalProperties": false
        },
        "references": {
          "type": "array",
          "items": {},
          "properties": {},
          "additionalProperties": false
        },
        "parent": {
          "$ref": "#/$defs/Id"
        }
      },
      "required": [
        "id",
        "concept",
        "properties",
        "children",
        "references"
      ],
      "additionalProperties": false
    },
    "GuideBookWriter": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/Id"
        },
        "concept": {
          "const": {
            "metamodel": "LIonCore_M3",
            "version": "1",
            "key": "GuideBookWriter"
          }
        },
        "properties": {
          "type": "array",
          "items": {},
          "properties": {
            "countries": {
              "type": "string"
            },
            "library_Writer_name": {
              "type": "string"
            }
          },
          "required": [
            "countries",
            "library_Writer_name"
          ],
          "additionalProperties": false
        },
        "children": {
          "type": "array",
          "items": {},
          "properties": {},
          "additionalProperties": false
        },
        "references": {
          "type": "array",
          "items": {},
          "properties": {},
          "additionalProperties": false
        },
        "parent": {
          "$ref": "#/$defs/Id"
        }
      },
      "required": [
        "id",
        "concept",
        "properties",
        "children",
        "references"
      ],
      "additionalProperties": false
    },
    "SpecialistBookWriter": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/Id"
        },
        "concept": {
          "const": {
            "metamodel": "LIonCore_M3",
            "version": "1",
            "key": "SpecialistBookWriter"
          }
        },
        "properties": {
          "type": "array",
          "items": {},
          "properties": {
            "subject": {
              "type": "string"
            },
            "library_Writer_name": {
              "type": "string"
            }
          },
          "required": [
            "subject",
            "library_Writer_name"
          ],
          "additionalProperties": false
        },
        "children": {
          "type": "array",
          "items": {},
          "properties": {},
          "additionalProperties": false
        },
        "references": {
          "type": "array",
          "items": {},
          "properties": {},
          "additionalProperties": false
        },
        "parent": {
          "$ref": "#/$defs/Id"
        }
      },
      "required": [
        "id",
        "concept",
        "properties",
        "children",
        "references"
      ],
      "additionalProperties": false
    },
    "SerializedNode": {
      "oneOf": [
        {
          "$ref": "#/$defs/Book"
        },
        {
          "$ref": "#/$defs/Library"
        },
        {
          "$ref": "#/$defs/Writer"
        },
        {
          "$ref": "#/$defs/GuideBookWriter"
        },
        {
          "$ref": "#/$defs/SpecialistBookWriter"
        }
      ]
    }
  }
}