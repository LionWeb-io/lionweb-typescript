{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lionweb.org/generic-serialization.schema.json",
  "title": "Generic serialization format",
  "type": "object",
  "properties": {
    "serializationFormatVersion": {
      "const": "1"
    },
    "metamodels": {
      "type": "array"
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/SerializedNode"
      }
    }
  },
  "required": [
    "serializationFormatVersion",
    "metamodels",
    "nodes"
  ],
  "additionalProperties": false,
  "$defs": {
    "Id": {
      "type": "string",
      "minLength": 1
    },
    "MetaPointer": {
      "type": "object",
      "properties": {
        "metamodel": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "key": {
          "type": "string"
        }
      },
      "required": [
        "metamodel",
        "version",
        "key"
      ],
      "additionalProperties": false
    },
    "SerializedProperty": {
      "type": "object",
      "properties": {
        "property": {
          "$ref": "#/$defs/MetaPointer"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "property",
        "value"
      ]
    },
    "SerializedContainment": {
      "type": "object",
      "properties": {
        "containment": {
          "$ref": "#/$defs/MetaPointer"
        },
        "children": {
          "$ref": "#/$defs/Ids"
        }
      },
      "required": [
        "containment",
        "children"
      ]
    },
    "SerializedReference": {
      "type": "object",
      "properties": {
        "reference": {
          "$ref": "#/$defs/MetaPointer"
        },
        "targets": {
          "$ref": "#/$defs/SerializedReferenceTarget"
        }
      },
      "required": [
        "reference",
        "targets"
      ]
    },
    "SerializedReferenceTarget": {
      "type": "object",
      "properties": {
        "resolveInfo": {
          "type": "string"
        },
        "reference": {
          "$ref": "#/$defs/Id"
        }
      },
      "required": [
        "reference"
      ]
    },
    "SerializedNode": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/Id"
        },
        "classifier": {
          "$ref": "#/$defs/MetaPointer"
        },
        "properties": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/SerializedProperty"
          }
        },
        "children": {
          "type": "array"
        },
        "references": {
          "type": "array"
        },
        "parent": {
          "$ref": "#/$defs/Id"
        }
      },
      "required": [
        "id",
        "concept",
        "properties",
        "children",
        "references"
      ]
    }
  }
}
