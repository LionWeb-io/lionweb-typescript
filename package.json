{
  "name": "lionweb-typescript",
  "version": "0.7.0-dev",
  "description": "LionWeb implementation for {Java|Type}Script",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LionWeb-io/lionweb-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/LionWeb-io/lionweb-typescript/issues"
  },
  "devDependencies": {
    "@types/node": "22.15.21",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "dpdm": "3.14.0",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "typescript": "5.3.3"
  },
  "scripts": {
    "clean": "npm run clean -w packages --if-present && npx rimraf node_modules",
    "setup": "npm run setup -w packages --if-present",
    "initialize": "npm run clean && npm install && npm run setup && ./rebuild.sh",
    "update-version": "node update-package-versions.js",
    "build": "npm run build -w packages --if-present",
    "test": "npm run test -w packages --if-present",
    "lint": "npm run lint -w packages --if-present",
    "prerelease": "npm run initialize",
    "release-alpha": "npm run release-alpha -w packages --if-present",
    "release-beta": "npm run release-beta -w packages --if-present",
    "release": "npm run release -w packages --if-present",
    "check-circular-deps": "node check-circular-dependencies.js"
  },
  "private": true,
  "workspaces": [
    "./packages/ts-utils",
    "./packages/json",
    "./packages/json-utils",
    "./packages/json-diff",
    "./packages/core",
    "./packages/textgen-utils",
    "./packages/utilities",
    "./packages/validation",
    "./packages/cli",
    "./packages/test",
    "./packages/io-lionweb-mps-specific",
    "./packages/class-core",
    "./packages/class-core-generator",
    "./packages/artifacts",
    "./packages/build",
    "./packages/class-core-test"
  ]
}
